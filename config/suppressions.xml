<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.1//EN"
        "http://www.puppycrawl.com/dtds/suppressions_1_1.dtd">

<suppressions>
    <suppress checks="JavadocPackage" files="src[\\/]test[\\/]java"/>
    <!-- Because junit likes rules to be public -->
    <suppress checks="VisibilityModifierCheck" files="src[\\/]test[\\/]java"/>
    <suppress checks="MethodName" files="Feature.java"/>
    <suppress checks="MagicNumber" files="src"/>
    <suppress checks="AvoidInlineConditionalsCheck" files="src"/>
    <suppress checks="FinalClass" files="ConversionService.java"/> <!-- Final prevents mocking of this service -->
    <suppress checks="EmptyBlock" files="VfsFileUtil.java"/>
    <suppress checks="HideUtilityClassConstructor" files="ApiViewerApplication.java"/> <!-- Spring Boot Application Class cannot make a private constructor -->
    <suppress checks="HideUtilityClassConstructor" files="ApiViewerCoreConfig.java"/> 
</suppressions>
